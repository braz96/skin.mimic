<?xml version="1.0" encoding="UTF-8"?>
<overrides>
	<!-- Backgrounds -->
	<backgroundBrowse>True</backgroundBrowse>

	<background label="31062" condition="System.HasAddon(script.grab.fanart)">movieFanart</background>
	<background label="31063" condition="System.HasAddon(script.grab.fanart)">tvFanart</background>
	<background label="31064" condition="System.HasAddon(script.grab.fanart)">videoFanart</background>
	<background label="31065" condition="System.HasAddon(script.grab.fanart)">musicFanart</background>
	<background label="31066" condition="System.HasAddon(script.grab.fanart)">allFanart</background>
	<background label="Live DVD Cases: Recent movies" condition="IsEmpty(Window(Home).Property(No.Cases))">s:live|i:movies</background>
	<background label="Live DVD Cases: Recent episodes" condition="IsEmpty(Window(Home).Property(No.Cases))">s:live|i:episodes</background>
	<background label="Live DVD Cases: ::PLAYLIST::" condition="IsEmpty(Window(Home).Property(No.Cases))">s:live|i:playlist</background>
	<background label="Live DVD Cases: Random songs" condition="IsEmpty(Window(Home).Property(No.Cases)) + System.HasAddon(service.library.data.provider)">s:live|i:songs</background>
	<background label="Live DVD Cases: Random albums" condition="IsEmpty(Window(Home).Property(No.Cases)) + System.HasAddon(service.library.data.provider)">s:live|i:albums</background>
	<background label="31084" condition="!IsEmpty(Skin.String(weatherfanart.path))">weatherBackground</background>
	<background label="::PLAYLIST::" condition="IsEmpty(Window(Home).Property(No.Cases))">s:playlist|i:playlist</background>

	<!-- Widgets -->
	<widget label="$INFO[System.AddonTitle(plugin.video.the.trailers)]" condition="System.HasAddon(plugin.video.the.trailers)" path="plugin://plugin.video.the.trailers/apple/movies/" type="movies" target="movies">trailers</widget>
	<widget label="12600" condition="!IsEmpty(Weather.Plugin)">weather</widget>
	<widget label="31907" condition="System.HasAddon(script.extendedinfo)" path="plugin://script.extendedinfo?info=dailybabes" target="picture">dailybabes</widget>

	<!-- Widget Icon Aspect Ratio -->
	<propertySettings property="widgetIcon" title="Select Icon" showNone="False" />
	<property property="widgetIcon">$LOCALIZE[31016]</property>
	<property property="widgetIcon">$LOCALIZE[31313]</property>
	<property property="widgetIcon">$LOCALIZE[31100]</property>
</overrides>
