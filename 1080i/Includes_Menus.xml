			<top>$PARAM[MenuClockTop]</top>
			<control type="grouplist">
				<top>8</top>
				<left>15</left>
				<width>354</width>
				<height>45</height>
				<align>$PARAM[MenuClockAlign]</align>
				<orientation>Horizontal</orientation>
