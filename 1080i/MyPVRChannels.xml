					<control type="label">
						<left>840</left>
						<top>-4</top>
						<width>30</width>
						<height>70</height>
						<font>IconSmall</font>
						<label>j</label>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="label">
						<animation effect="slide" time="0" tween="sine" easing="inout" start="0" end="35" condition="ListItem.IsPlaying">Conditional</animation>
						<left>200</left>
						<top>-5</top>
						<width>670</width>
						<height>70</height>
						<font>font30</font>
						<label>$INFO[ListItem.ChannelNumberLabel,,. ]$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>200</left>
						<top>44</top>
						<width>670</width>
						<height>60</height>
