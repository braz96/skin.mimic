						<top>1</top>
						<width>35</width>
						<height>60</height>
						<font>IconTiny</font>
						<label>I</label>
					</control>
					<control type="label">
						<left>840</left>
						<top>-4</top>
						<width>30</width>
						<height>70</height>
						<font>IconSmall</font>
						<label>j</label>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="label">
						<animation effect="slide" time="0" tween="sine" easing="inout" start="0" end="35" condition="ListItem.IsPlaying">Conditional</animation>
