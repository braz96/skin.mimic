<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">5</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>399</left>
		<top>165</top>
	</coordinates>
	<include>Animation.Dialog</include>
	<controls>
		<control type="group">
			<include content="DialogBackgroundCommons">
				<param name="DialogBackgroundWidth" value="1122" />
				<param name="DialogBackgroundHeight" value="750" />
				<param name="DialogHeaderLabel" value="$LOCALIZE[19047]" />
				<param name="DialogHeaderId" value="2" />
			</include>
			<control type="group">
				<control type="panel" id="9002">
					<left>31</left>
					<top>88</top>
					<width>738</width>
					<height>540</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>noop</onleft>
					<onright>noop</onright>
					<pagecontrol />
					<scrolltime tween="quadratic" easing="out">200</scrolltime>
					<itemlayout height="90" width="738">
						<control type="label">
							<top>45</top>
							<width>738</width>
							<height>38</height>
							<font>font14</font>
							<label>$INFO[ListItem.Label]</label>
							<textoffsetx>15</textoffsetx>
						</control>
						<control type="label">
							<width>738</width>
							<height>45</height>
							<font>font14</font>
							<label>$INFO[ListItem.Label2]</label>
							<textoffsetx>15</textoffsetx>
						</control>
					</itemlayout>
					<focusedlayout height="90" width="738">
						<control type="image">
							<width>738</width>
							<height>90</height>
							<texture border="5">listselect_fo.png</texture>
							<colordiffuse>$VAR[ColorHighlightVar]</colordiffuse>
							<visible>Control.HasFocus(9002)</visible>
							<include>VisibleFadeEffect</include>
						</control>
						<control type="label">
							<top>45</top>
							<width>738</width>
							<height>38</height>
							<font>font14</font>
							<label>$INFO[ListItem.Label]</label>
							<textoffsetx>15</textoffsetx>
						</control>
						<control type="label">
							<width>738</width>
							<height>45</height>
							<font>font14</font>
							<label>$INFO[ListItem.Label2]</label>
							<textoffsetx>15</textoffsetx>
						</control>
					</focusedlayout>
					<content>
						<item>
							<label>$INFO[ListItem.Title]</label>
							<label2>[COLOR $VAR[ColorHighlightVar]]$LOCALIZE[369]:[/COLOR]</label2>
							<onclick>noop</onclick>
						</item>
						<item>
							<label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime] ($INFO[ListItem.StartDate])</label>
							<label2>[COLOR $VAR[ColorHighlightVar]]$LOCALIZE[142][/COLOR]</label2>
							<onclick>noop</onclick>
							<visible>!String.IsEmpty(ListItem.StartTime)</visible>
						</item>
						<item>
							<label>$INFO[ListItem.Duration]</label>
							<label2>[COLOR $VAR[ColorHighlightVar]]$LOCALIZE[180]:[/COLOR]</label2>
							<onclick>noop</onclick>
							<visible>!String.IsEmpty(ListItem.Duration)</visible>
						</item>
						<item>
							<label>[CAPITALIZE]$INFO[ListItem.Genre][/CAPITALIZE]</label>
							<label2>[COLOR $VAR[ColorHighlightVar]]$LOCALIZE[515]:[/COLOR]</label2>
							<onclick>noop</onclick>
							<visible>!String.IsEmpty(ListItem.Genre)</visible>
						</item>
					</content>
				</control>
				<control type="textbox" id="400">
					<description>Plot value</description>
					<left>46</left>
					<top>470</top>
					<width>1030</width>
					<height>170</height>
					<font>font14_textbox</font>
					<pagecontrol>60</pagecontrol>
					<autoscroll time="3000" delay="4000" repeat="5000">!Skin.HasSetting(Disable.AutoScroll) + !Control.HasFocus(60)</autoscroll>
					<label fallback="161">$INFO[ListItem.Plot]</label>
				</control>
				<control type="scrollbar" id="60">
					<visible allowhiddenfocus="true">Control.HasFocus(60)</visible>
					<left>1082</left>
					<top>470</top>
					<height>170</height>
					<width>10</width>
					<onup>PageUp(400)</onup>
					<ondown>PageUp(400)</ondown>
					<onleft>9000</onleft>
					<onright>9000</onright>
					<orientation>vertical</orientation>
				</control>
				<!-- right group -->
				<control type="group">
					<left>782</left>
					<top>88</top>
					<control type="image">
						<top>15</top>
						<width>310</width>
						<height>310</height>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
				</control>
				<control type="grouplist" id="9000">
		 			<left>31</left>
		 			<top>660</top>
		 			<width>1060</width>
		 			<height>60</height>
		 			<onup condition="Container(400).HasNext | Container(400).HasPrevious">60</onup>
		 			<align>center</align>
		 			<itemgap>14</itemgap>
		 			<orientation>horizontal</orientation>
					<control type="button" id="5">
						<description>Switch button</description>
						<width>344</width>
						<label>19165</label>
						<font>font15_title</font>
						<align>center</align>
						<texturenofocus colordiffuse="33787878" border="5">listselect_fo.png</texturenofocus>
					</control>
					<control type="button" id="9">
						<description>Add timer button</description>
						<width>344</width>
						<label>19061</label>
						<font>font15_title</font>
						<align>center</align>
						<texturenofocus colordiffuse="33787878" border="5">listselect_fo.png</texturenofocus>
					</control>
					<control type="button" id="6">
						<description>Record button</description>
						<visible>!Window.IsActive(tvrecordings)</visible>
						<width>344</width>
						<label />
						<font>font15_title</font>
						<align>center</align>
						<texturenofocus colordiffuse="33787878" border="5">listselect_fo.png</texturenofocus>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>