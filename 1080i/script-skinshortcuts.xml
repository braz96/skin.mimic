<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1134">
	<defaultcontrol always="true">90001</defaultcontrol>
	<onunload>RunScript(script.skinshortcuts,type=buildxml&amp;mode=single&amp;options=clonewidgets&amp;mainmenuID=9000&amp;group=mainmenu|quicknav)</onunload>
	<allowoverlay>no</allowoverlay>
	<coordinates>
		<system>1</system>
	</coordinates>
	<include condition="!Window.IsVisible(SkinSettings.xml)">Animation.Dialog</include>
	<animation effect="slide" start="0,0" end="0,30" time="0" condition="!Window.IsVisible(SkinSettings.xml)">Conditional</animation>
	<controls>
		<control type="group">
			<visible>!Window.IsActive(SkinSettings.xml)</visible>
			<top>90</top>
			<left>53</left>
			<include content="DialogBackgroundCommons">
				<param name="DialogBackgroundWidth" value="1814" />
				<param name="DialogBackgroundHeight" value="840" />
				<param name="DialogHeaderLabel" value="31249" />
				<param name="DialogHeaderId" value="" />
			</include>
		</control>
		<control type="group">
			<visible>String.IsEmpty(Window.Property(additionalDialog))</visible>
			<left>0</left>
			<top>180</top>
			<animation type="WindowOpen" reversible="false" condition="Window.IsVisible(SkinSettings.xml)">
	            <effect type="fade" start="0" end="100" time="300" tween="sine" easing="in" />
	            <effect type="zoom" start="50" end="100" time="300" center="auto" tween="quadratic" easing="out" />
	        </animation>
			<control type="list" id="211">
				<left>82</left>
				<top>0</top>
				<width>356</width>
				<height>720</height>
				<onleft>90001</onleft>
				<onright>90001</onright>
				<onup>211</onup>
				<ondown>211</ondown>
				<!--<pagecontrol>61</pagecontrol>-->
				<scrolltime tween="quadratic" easing="out">200</scrolltime>
				<itemlayout height="90" width="356">
					<control type="label">
						<animation effect="fade" time="0" end="30" condition="String.IsEqual(ListItem.Property(skinshortcuts-disabled),True)">Conditional</animation>
						<width>356</width>
						<height>90</height>
						<font>font15</font>
						<textoffsetx>20</textoffsetx>
						<selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="90" width="356">
					<control type="image">
						<width>356</width>
						<height>90</height>
						<texture border="5">listselect_fo.png</texture>
						<colordiffuse>$VAR[ColorHighlightVar]</colordiffuse>
						<animation effect="fade" start="100" end="50" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(211)">Conditional</animation>
					</control>
					<control type="label">
						<width>356</width>
						<height>90</height>
						<font>font15</font>
						<textoffsetx>20</textoffsetx>
						<selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<!--<control type="scrollbar" id="61">
				<left>0</left>
