<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>655</defaultcontrol>
    <visible>!System.ScreenSaverActive</visible>
    <controls>
        <control type="group">
            <control type="image">
                <include>FullscreenDimensions</include>
                <texture>black.png</texture>
            </control>
            <control type="multiimage">
                <include>FullscreenDimensions</include>
                <aspectratio>scale</aspectratio>
                <imagepath background="true">$INFO[Container(655).ListItem.Property(Fanart_Image)]</imagepath>
                <fadetime>400</fadetime>
                <visible>!String.IsEmpty(Container(655).ListItem.Property(Fanart_Image))</visible>
            </control>
            <control type="image">
                <include>FullscreenDimensions</include>
                <texture>background.png</texture>
                <colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
            </control>
            <control type="group">
                <visible>Control.IsVisible(655)</visible>
                <include>Animation.Common</include>
                <!--container-->
                <control type="group">
                    <visible>Integer.IsGreater(Container(655).NumItems,0)</visible>
                    <control type="image">
                        <left>65</left>
                        <top>160</top>
                        <width>1798</width>
                        <height>220</height>
                        <visible>Control.HasFocus(655)</visible>
                        <animation effect="fade" time="320" delay="200">Visible</animation>
                        <animation effect="fade" time="50">Hidden</animation>
                        <texture colordiffuse="$VAR[ColorHighlightVar]" border="5">listselect_fo.png</texture>
                        <animation effect="slide" end="0,221" time="300" tween="cubic" easing="inout" condition="Container(655).Row(3)">Conditional</animation>
                        <animation effect="slide" end="0,221" time="300" tween="cubic" easing="inout" condition="Container(655).Row(3) | Container(655).Row(2)">Conditional</animation>
                        <animation effect="slide" end="0,221" time="300" tween="cubic" easing="inout" condition="Container(655).Row(3) | Container(655).Row(2) | Container(655).Row(1)">Conditional</animation>
                    </control>
                </control>
                <control type="panel" id="655">
                    <viewtype label="31052">list</viewtype>
                    <left>60</left>
                    <top>160</top>
                    <width>1808</width>
                    <height>884</height>
                    <onleft>655</onleft>
                    <onright>60</onright>
                    <onup>655</onup>
                    <ondown>655</ondown>
                    <pagecontrol>60</pagecontrol>
                    <preloaditems>2</preloaditems>
                    <orientation>vertical</orientation>
                    <!--landscape layout-->
                    <itemlayout width="1808" height="221">
                        <control type="group">
                            <left>18</left>
                            <top>12</top>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture background="true" diffuse="diffuse/biglist-landscape.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
                                <aspectratio scalediffuse="false">scale</aspectratio>
                            </control>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture border="5">overlays/diffuse-overlay.png</texture>
                            </control>
                            <control type="group">
                                <visible>ListItem.IsSelected</visible>
                                <left>282</left>
                                <top>3</top>
                                <control type="image">
                                    <width>60</width>
                                    <height>60</height>
                                    <texture colordiffuse="$VAR[ColorHighlightVar]">overlays/overlaybg.png</texture>
                                    <aspectratio align="center" aligny="top">keep</aspectratio>
                                </control>
                                <control type="label">
                                    <top>2</top>
                                    <left>2</left>
                                    <width>56</width>
                                    <height>56</height>
                                    <align>center</align>
                                    <font>IconPlayer</font>
                                    <label>T</label>
                                </control>
                                <control type="label">
                                    <top>1</top>
                                    <left>1</left>
                                    <width>56</width>
                                    <height>56</height>
                                    <align>center</align>
                                    <font>IconSuperTiny</font>
                                    <textcolor>$VAR[ColorHighlightVar]</textcolor>
                                    <selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
                                    <label>A</label>
                                </control>
                            </control>
                        </control>
                        <control type="group">
                            <left>382</left>
                            <top>12</top>
                            <control type="label">
                                <width>1380</width>
                                <height>70</height>
                                <label>$INFO[ListItem.Season,,x]$INFO[ListItem.Episode,,. ]$INFO[ListItem.Label2]</label>
                                <font>font30</font>
                            </control>
                            <control type="label">
                                <top>51</top>
                                <width>1380</width>
                                <height>60</height>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                            <control type="textbox">
                                <top>100</top>
                                <width>1380</width>
                                <height>85</height>
                                <label>$INFO[ListItem.Plot]</label>
    							<font>font13_textbox</font>
                            </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="1808" height="221">
                        <control type="group">
                            <left>18</left>
                            <top>12</top>
                            <animation type="Focus">
                                <effect type="zoom" time="150" start="95" end="100" center="251,147" />
                                <effect type="zoom" time="150" start="105" end="100" delay="150" center="251,147" />
                            </animation>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture background="true" diffuse="diffuse/biglist-landscape.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
                                <aspectratio scalediffuse="false">scale</aspectratio>
                            </control>
                            <control type="image">
                                <animation center="auto" condition="Control.HasFocus(655)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
                                <animation center="auto" condition="Control.HasFocus(655)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
                                <width>346</width>
                                <height>195</height>
                                <texture border="5">overlays/diffuse-overlay.png</texture>
                            </control>
                            <control type="group">
                                <visible>ListItem.IsSelected</visible>
                                <left>282</left>
                                <top>3</top>
                                <control type="image">
                                    <width>60</width>
                                    <height>60</height>
                                    <texture colordiffuse="$VAR[ColorHighlightVar]">overlays/overlaybg.png</texture>
                                    <aspectratio align="center" aligny="top">keep</aspectratio>
                                </control>
                                <control type="label">
                                    <top>2</top>
                                    <left>2</left>
                                    <width>56</width>
                                    <height>56</height>
                                    <align>center</align>
                                    <font>IconPlayer</font>
                                    <label>T</label>
                                </control>
                                <control type="label">
                                    <top>1</top>
                                    <left>1</left>
                                    <width>56</width>
                                    <height>56</height>
                                    <align>center</align>
                                    <font>IconSuperTiny</font>
                                    <textcolor>$VAR[ColorHighlightVar]</textcolor>
                                    <selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
                                    <label>A</label>
                                </control>
                            </control>
                        </control>
                        <control type="group">
                            <left>382</left>
                            <top>12</top>
                            <control type="label">
                                <width>1380</width>
                                <height>70</height>
                                <label>$INFO[ListItem.Season,,x]$INFO[ListItem.Episode,,. ]$INFO[ListItem.Label2]</label>
                                <font>font30</font>
                            </control>
                            <control type="label">
                                <top>51</top>
                                <width>1380</width>
                                <height>60</height>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                            <control type="textbox">
                                <top>100</top>
                                <width>1380</width>
                                <height>85</height>
                                <label>$INFO[ListItem.Plot]</label>
                                <font>font13_textbox</font>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
            </control>
        </control>
        <control type="scrollbar" id="60">
            <visible allowhiddenfocus="true">Control.HasFocus(60) | Container(655).Scrolling</visible>
            <animation effect="fade" time="300" tween="sine" easing="inout" start="0" end="100">Visible</animation>
            <left>1910</left>
            <top>120</top>
            <width>10</width>
            <height>960</height>
            <onup>60</onup>
            <ondown>60</ondown>
            <onleft>655</onleft>
            <onright>655</onright>
            <orientation>vertical</orientation>
        </control>
        <include>Topbar</include>
    </controls>
</window>
