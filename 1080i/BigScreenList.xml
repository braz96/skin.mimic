<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>655</defaultcontrol>
    <visible>!System.ScreenSaverActive</visible>
    <controls>
		<include>ViewAnimation</include>
        <control type="group">
            <control type="image">
                <include>FullscreenDimensions</include>
                <texture>black.png</texture>
            </control>
            <control type="multiimage">
                <include>FullscreenDimensions</include>
                <aspectratio>scale</aspectratio>
                <imagepath background="true">$INFO[Container(655).ListItem.Property(Fanart_Image)]</imagepath>
                <fadetime>400</fadetime>
                <visible>!IsEmpty(Container(655).ListItem.Property(Fanart_Image))</visible>
            </control>
            <control type="image">
                <include>FullscreenDimensions</include>
                <texture>background.png</texture>
                <colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
            </control>
            <control type="group">
                <visible>Control.IsVisible(655)</visible>
                <include>Window_OpenClose_Animation</include>
                <!--container-->
                <control type="group">
                    <visible>IntegerGreaterThan(Container(655).NumItems,0)</visible>
                    <control type="image">
                        <left>60</left>
                        <top>76</top>
                        <width>1808</width>
                        <height>230</height>
                        <visible>Control.HasFocus(655)</visible>
                        <animation effect="fade" time="320" delay="200">Visible</animation>
                        <animation effect="fade" time="50">Hidden</animation>
                        <texture colordiffuse="$VAR[ColorHighlightVar]">listselect_fo.png</texture>
                        <animation effect="slide" end="0,231" time="300" tween="cubic" easing="inout" condition="Container(655).Row(3)">Conditional</animation>
                        <animation effect="slide" end="0,231" time="300" tween="cubic" easing="inout" condition="Container(655).Row(3) | Container(655).Row(2)">Conditional</animation>
                        <animation effect="slide" end="0,231" time="300" tween="cubic" easing="inout" condition="Container(655).Row(3) | Container(655).Row(2) | Container(655).Row(1)">Conditional</animation>
                    </control>
                </control>
                <control type="panel" id="655">
                    <viewtype label="31052">list</viewtype>
                    <left>60</left>
                    <top>82</top>
                    <width>1808</width>
                    <height>934</height>
                    <onleft>655</onleft>
                    <onright>60</onright>
                    <onup>655</onup>
                    <ondown>655</ondown>
                    <pagecontrol>60</pagecontrol>
                    <preloaditems>2</preloaditems>
                    <orientation>vertical</orientation>
                    <!--landscape layout-->
                    <itemlayout width="1808" height="231">
                        <control type="group">
                            <left>18</left>
                            <top>11</top>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture>background.png</texture>
                                <colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
                            </control>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
                                <aspectratio>scale</aspectratio>
                            </control>
                            <control type="image">
                                <visible>ListItem.IsSelected</visible>
                                <width>346</width>
                                <height>195</height>
                                <texture>listselect_fo.png</texture>
                                <colordiffuse>$VAR[ColorHighlightVar]</colordiffuse>
                            </control>
                        </control>
                        <control type="group">
                            <left>382</left>
                            <top>6</top>
                            <control type="label">
                                <width>1380</width>
                                <label>[B]$INFO[ListItem.Season,,x]$INFO[ListItem.Episode,,. ]$INFO[ListItem.Label2][/B]</label>
                                <font>font16_title</font>
    							<textcolor>$VAR[ColorTextVar]</textcolor>
                                <selectedcolor>$VAR[ColorTextVar]</selectedcolor>
    							<aligny>top</aligny>
                            </control>
                            <control type="label">
                                <top>50</top>
                                <width>1380</width>
                                <label>$INFO[ListItem.Label]</label>
                                <aligny>top</aligny>
    							<font>font15</font>
    							<textcolor>$VAR[ColorHighlightVar]</textcolor>
    							<selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
                            </control>
                            <control type="textbox">
                                <top>100</top>
                                <width>1380</width>
                                <height>108</height>
                                <label>$INFO[ListItem.Plot]</label>
    							<font>font14_textbox2</font>
    							<textcolor>$VAR[ColorTextVar]</textcolor>
                            </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="1808" height="231">
                        <control type="group">
                            <left>18</left>
                            <top>11</top>
                            <animation type="Focus">
                                <effect type="zoom" time="150" start="95" end="100" center="251,147" />
                                <effect type="zoom" time="150" start="105" end="100" delay="150" center="251,147" />
                            </animation>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture>background.png</texture>
                                <colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
                            </control>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
                                <aspectratio>scale</aspectratio>
                            </control>
                            <control type="image">
                                <visible>ListItem.IsSelected</visible>
                                <width>346</width>
                                <height>195</height>
                                <texture>listselect_fo.png</texture>
                                <colordiffuse>$VAR[ColorHighlightVar]</colordiffuse>
                            </control>
                        </control>
                        <control type="group">
                            <left>382</left>
                            <top>6</top>
                            <control type="group">
                                <control type="label">
                                    <width>1380</width>
                                    <label>[B]$INFO[ListItem.Season,,x]$INFO[ListItem.Episode,,. ]$INFO[ListItem.Label2][/B]</label>
                                    <font>font16_title</font>
    								<aligny>top</aligny>
    								<textcolor>$VAR[ColorTextVar]</textcolor>
                                    <selectedcolor>$VAR[ColorTextVar]</selectedcolor>
                                </control>
                                <control type="label">
                                    <top>50</top>
                                    <width>1380</width>
                                    <label>$INFO[ListItem.Label]</label>
                                    <aligny>top</aligny>
    								<font>font15</font>
    								<textcolor>$VAR[ColorHighlightVar]</textcolor>
                                    <selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
                                </control>
                                <control type="textbox">
                                    <top>100</top>
                                    <width>1380</width>
                                    <height>108</height>
                                    <label>$INFO[ListItem.Plot]</label>
    								<textcolor>$VAR[ColorTextVar]</textcolor>
    								<font>font14_textbox2</font>
    								<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll) + !Control.HasFocus(60)</autoscroll>
                                </control>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
    			<control type="scrollbar" id="60">
    				<left>1906</left>
    				<top>45</top>
    				<width>14</width>
    				<height>1035</height>
    				<onup>60</onup>
    				<ondown>60</ondown>
    				<onleft>655</onleft>
    				<onright>655</onright>
    				<orientation>vertical</orientation>
    			</control>
            </control>
        </control>
        <control type="group">
            <animation effect="slide" start="0,-90" end="0,0" delay="800" time="480">WindowOpen</animation>
            <animation effect="slide" end="0,-90" start="0,0" time="480">WindowClose</animation>
            <control type="image">
                <width>FullScreenWidth</width>
                <height>45</height>
                <texture>topbar.png</texture>
                <colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
            </control>
            <control type="group">
                <top>-2</top>
                <control type="label">
                    <width>900</width>
                    <height>45</height>
                    <font>topbar</font>
                    <textoffsetx>15</textoffsetx>
                    <textcolor>$VAR[ColorTextVar]</textcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[System.AddonTitle(script.lazytv)]</label>
                </control>
                <control type="label">
                    <left>1040</left>
                    <width>880</width>
                    <height>45</height>
                    <font>topbar</font>
                    <textoffsetx>15</textoffsetx>
                    <textcolor>$VAR[ColorTextVar]</textcolor>
                    <align>right</align>
                    <aligny>center</aligny>
                    <label>$INFO[Container(655).NumItems,, $LOCALIZE[31025]  â€¢  ][COLOR $VAR[ColorHighlightVar]]$INFO[Container(655).CurrentPage]$INFO[Container(655).NumPages,/][/COLOR]</label>
                </control>
                <control type="label">
                    <left>0</left>
                    <width>FullScreenWidth</width>
                    <height>45</height>
                    <font>topbar</font>
                    <textoffsetx>15</textoffsetx>
                    <textcolor>$VAR[ColorTextVar]</textcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>$INFO[System.Time]</label>
                </control>
            </control>
        </control>
        <include>Bottombar</include>
    </controls>
</window>
