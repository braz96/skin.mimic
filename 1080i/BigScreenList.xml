<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>655</defaultcontrol>
    <visible>!System.ScreenSaverActive</visible>
    <!--onload condition="Skin.HasSetting(TVTunes.Enabled) + System.HasAddon(script.tvtunes)">XBMC.RunScript(script.tvtunes,backend=True&amp;loop=False)</onload><onload>ClearProperty(gallery)</onload><onunload>ClearProperty(gallery)</onunload-->
    <controls>
		<include>ViewAnimation</include>
        <control type="group">
            <control type="image">
                <include>FullscreenDimensions</include>
                <texture>black.png</texture>
            </control>
            <control type="multiimage">
                <include>FullscreenDimensions</include>
                <aspectratio>scale</aspectratio>
                <imagepath background="true">$INFO[Container(655).ListItem.Property(Fanart_Image)]</imagepath>
                <fadetime>400</fadetime>
                <visible>!IsEmpty(Container(655).ListItem.Property(Fanart_Image))</visible>
            </control>
            <control type="image">
                <include>FullscreenDimensions</include>
                <texture>background.png</texture>
                <colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
            </control>
            <control type="group">
                <visible>Control.IsVisible(655)</visible>
                <include>Window_OpenClose_Animation</include>
                <!--container-->
                <control type="fixedlist" id="655">
                    <viewtype label="31052">list</viewtype>
                    <left>60</left>
                    <top>87</top>
                    <width>1808</width>
                    <height>934</height>
                    <onleft>655</onleft>
                    <onright>60</onright>
                    <onup>655</onup>
                    <ondown>655</ondown>
                    <pagecontrol>60</pagecontrol>
                    <focusposition>1</focusposition>
                    <preloaditems>2</preloaditems>
                    <orientation>vertical</orientation>
                    <!--landscape layout-->
                    <itemlayout width="1808" height="231">
                        <control type="group">
                            <left>18</left>
                            <top>10</top>
                            <control type="image">
                                <left>-18</left>
                                <top>-18</top>
                                <width>1803</width>
                                <height>231</height>
                                <texture>listselect_fo.png</texture>
                                <colordiffuse>$VAR[ColorHighlightVar]</colordiffuse>
                                <visible>ListItem.IsSelected</visible>
                                <include>VisibleFadeEffect</include>
                            </control>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture>background.png</texture>
                                <colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
                            </control>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
                                <aspectratio>scale</aspectratio>
                            </control>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture>thumbs/diffuse.png</texture>
                                <fadetime>300</fadetime>
                            </control>
                            <control type="image">
                                <left>286</left>
                                <width>60</width>
                                <height>60</height>
                                <texture>$VAR[OverlayVar]</texture>
                                <aspectratio align="right" aligny="top">keep</aspectratio>
                            </control>
                        </control>
                        <control type="group">
                            <left>382</left>
                            <top>6</top>
                            <control type="label">
                                <width>1380</width>
                                <label>[B]$INFO[ListItem.Season,,x]$INFO[ListItem.Episode,,. ]$INFO[ListItem.Label2][/B]</label>
                                <font>font16_title</font>
    							<textcolor>maintext</textcolor>
    							<aligny>top</aligny>
                            </control>
                            <control type="label">
                                <top>50</top>
                                <width>1380</width>
                                <label>$INFO[ListItem.Label]</label>
                                <aligny>top</aligny>
    							<font>font15</font>
    							<textcolor>$VAR[ColorHighlightVar]</textcolor>
    							<selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
                            </control>
                            <control type="textbox">
                                <top>100</top>
                                <width>1380</width>
                                <height>108</height>
                                <label>$INFO[ListItem.Plot]</label>
    							<font>font14_textbox2</font>
    							<textcolor>maintext</textcolor>
                            </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="1808" height="231">
    					<control type="image">
    						<top>-8</top>
    						<width>1803</width>
    						<height>231</height>
    						<texture>listselect_fo.png</texture>
    						<colordiffuse>$VAR[ColorHighlightVar]</colordiffuse>
    						<visible>Control.HasFocus(655)</visible>
    						<include>VisibleFadeEffect</include>
    					</control>
                        <control type="group">
                            <left>18</left>
                            <top>10</top>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture>background.png</texture>
                                <colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
                            </control>
                            <control type="image">
                                <width>346</width>
                                <height>195</height>
                                <texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
                                <aspectratio>scale</aspectratio>
                            </control>
                            <control type="image">
                                <left>286</left>
                                <width>60</width>
                                <height>60</height>
                                <texture>$VAR[OverlayVar]</texture>
                                <aspectratio align="right" aligny="top">keep</aspectratio>
                            </control>
                        </control>
                        <control type="group">
                            <left>382</left>
                            <top>6</top>
                            <control type="group">
                                <control type="label">
                                    <width>1380</width>
                                    <label>[B]$INFO[ListItem.Season,,x]$INFO[ListItem.Episode,,. ]$INFO[ListItem.Label2][/B]</label>
                                    <font>font16_title</font>
    								<aligny>top</aligny>
    								<textcolor>maintext</textcolor>
                                </control>
                                <control type="label">
                                    <top>50</top>
                                    <width>1380</width>
                                    <label>$INFO[ListItem.Label]</label>
                                    <aligny>top</aligny>
    								<font>font15</font>
    								<textcolor>maintext</textcolor>
    								<selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
    								<visible>!Container.Content(artists)</visible>
                                </control>
    							<control type="label">
    								<top>50</top>
    								<width>1380</width>
    								<label>$INFO[ListItem.Property(Artist_Genre)]</label>
    								<aligny>top</aligny>
    								<font>font15</font>
    								<textcolor>maintext</textcolor>
    								<selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
    								<visible>Container.Content(artists)</visible>
    							</control>
                                <control type="textbox">
                                    <top>100</top>
                                    <width>1380</width>
                                    <height>108</height>
                                    <label>$INFO[ListItem.Plot]</label>
    								<textcolor>maintext</textcolor>
    								<font>font14_textbox2</font>
    								<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll) + !Control.HasFocus(60)</autoscroll>
                                </control>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
    			<control type="scrollbar" id="60">
    				<left>1906</left>
    				<top>45</top>
    				<width>14</width>
    				<height>1035</height>
    				<onup>60</onup>
    				<ondown>60</ondown>
    				<onleft>655</onleft>
    				<onright>655</onright>
    				<orientation>vertical</orientation>
    			</control>
            </control>
        </control>
        <control type="group">
            <animation effect="slide" start="0,-90" end="0,0" delay="800" time="480">WindowOpen</animation>
            <animation effect="slide" end="0,-90" start="0,0" time="480">WindowClose</animation>
            <control type="image">
                <width>FullScreenWidth</width>
                <height>45</height>
                <texture>topbar.png</texture>
                <colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
            </control>
            <control type="group">
                <top>-2</top>
                <control type="label">
                    <width>900</width>
                    <height>45</height>
                    <font>topbar</font>
                    <textoffsetx>15</textoffsetx>
                    <textcolor>maintext</textcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[System.AddonTitle(script.lazytv)]</label>
                </control>
                <control type="label">
                    <left>1040</left>
                    <width>880</width>
                    <height>45</height>
                    <font>topbar</font>
                    <textoffsetx>15</textoffsetx>
                    <textcolor>maintext</textcolor>
                    <align>right</align>
                    <aligny>center</aligny>
                    <label>$INFO[Container(655).NumItems,, $LOCALIZE[31025]  â€¢  ][COLOR $VAR[ColorHighlightVar]]$INFO[Container(655).CurrentPage]$INFO[Container(655).NumPages,/][/COLOR]</label>
                </control>
                <control type="label">
                    <left>0</left>
                    <width>FullScreenWidth</width>
                    <height>45</height>
                    <font>topbar</font>
                    <textoffsetx>15</textoffsetx>
                    <textcolor>maintext</textcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>$INFO[System.Time]</label>
                </control>
            </control>
        </control>
        <include>Bottombar</include>
    </controls>
</window>
