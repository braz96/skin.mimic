<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">450</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="image">
			<animation effect="fade" time="400" delay="800">WindowOpen</animation>
			<include>FullscreenDimensions</include>
			<texture>special://skin/backgrounds/default_bg.jpg</texture>
			<fadetime>400</fadetime>
		</control>
		<control type="image">
			<animation effect="fade" time="0" delay="800">WindowOpen</animation>
			<include>FullscreenDimensions</include>
			<texture>background.png</texture>
			<colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
		</control>
		<control type="group">
			<animation effect="slide" tween="cubic" time="720" start="0,1080" end="0,0" delay="800">WindowOpen</animation>
			<animation effect="slide" tween="cubic" time="720" end="0,1080" start="0,0">WindowClose</animation>
			<include condition="!Skin.HasSetting(Enable.FavView)">FavList</include>
			<include condition="Skin.HasSetting(Enable.FavView)">FavPanel</include>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>45</top>
				<width>14</width>
				<height>1035</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>450</onleft>
				<onright>450</onright>
				<orientation>vertical</orientation>
			</control>
		</control>
		<include>ScrollOffsetLabel</include>
		<control type="group">	
			<animation effect="slide" start="0,-90" end="0,0" delay="1600" time="480">WindowOpen</animation>
			<animation effect="slide" end="0,-90" start="0,0" time="480">WindowClose</animation>
			<control type="image">
				<width>FullScreenWidth</width>
				<height>45</height>
				<texture>topbar.png</texture>
				<colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
			</control>
			<control type="group">
				<top>-2</top>
				<control type="label">
					<width>900</width>
					<height>45</height>
					<font>topbar</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>maintext</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$LOCALIZE[1036]</label>
				</control>
				<control type="label">
					<left>1040</left>
					<width>880</width>
					<height>45</height>
					<font>topbar</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>maintext</textcolor>
					<align>right</align>
					<aligny>center</aligny>
					<label>$INFO[Container(450).NumItems,, $LOCALIZE[31025]  â€¢  ][COLOR $VAR[ColorHighlightVar]]$INFO[Container(450).CurrentPage]$INFO[Container(450).NumPages,/][/COLOR]</label>
				</control>
				<control type="label">
					<left>0</left>
					<width>FullScreenWidth</width>
					<height>45</height>
					<font>topbar</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>maintext</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[System.Time]</label>
				</control>
			</control>
		</control>
		<include>Bottombar</include>
	</controls>
</window>