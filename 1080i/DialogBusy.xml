<?xml version="1.0" encoding="UTF-8"?>
<window>
	<coordinates>
		<system>1</system>
		<left>1090</left>
		<top>32</top>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="group">
			<visible>Window.IsActive(home)</visible>
			<animation effect="slide" time="0" tween="cubic" easing="out" start="0,0" end="0,77" condition="StringCompare(Skin.String(HomeLayout),2) + Window.IsActive(Home)">Conditional</animation>
			<animation effect="slide" time="0" tween="cubic" easing="out" start="0,0" end="0,-45" condition="StringCompare(Skin.String(HomeLayout),3) + Window.IsActive(Home)">Conditional</animation>
			<left>0</left>
			<top>0</top>
			<control type="image">
				<description>background image</description>
				<left>0</left>
				<top>0</top>
				<width>800</width>
				<height>140</height>
				<texture border="12">dialog_context.png</texture>
				<colordiffuse>$VAR[ColorDialogVar]</colordiffuse>
			</control>
			<control type="progress" id="10">
				<description>progress control</description>
				<left>30</left>
				<top>30</top>
				<width>740</width>
				<height>80</height>
			</control>
			<control type="image">
                <description>Busy animation</description>
                <top>40</top>
                <left>40</left>
                <width>60</width>
                <height>60</height>
                <texture colordiffuse="$VAR[ColorTextVar]" fallback="special://skin/extras/spinners/Sun.png">$INFO[Skin.String(busyloader)]</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="rotate" start="360" end="0" center="auto" time="3000" loop="true" condition="true">conditional</animation>
            </control>
			<control type="list">
				<left>150</left>
				<top>30</top>
				<width>300</width>
				<height>80</height>
				<scrolltime tween="quadratic" easing="out">0</scrolltime>
				<autoscroll time="1000" repeat="1000">true</autoscroll>
				<orientation>vertical</orientation>
				<itemlayout height="80">
					<control type="label">
						<description>Busy label</description>
						<left>0</left>
						<top>0</top>
						<width>300</width>
						<height>80</height>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<font>font15_title</font>
					</control>
				</itemlayout>
				<focusedlayout height="80">
					<control type="label">
						<description>Busy label</description>
						<left>0</left>
						<top>0</top>
						<width>300</width>
						<height>80</height>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<font>font15_title</font>
					</control>
				</focusedlayout>
				<content>
					<item>
						<label>$LOCALIZE[31004]</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31004].</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31004]..</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31004]...</label>
						<onclick>noop</onclick>
					</item>
				</content>
			</control>
		</control>
	</controls>
</window>