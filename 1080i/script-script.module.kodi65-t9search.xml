<?xml version="1.0" encoding="utf-8"?>
<window>
    <onunload>ClearProperty(MediaMenu,Home)</onunload>
    <defaultcontrol always="true">9090</defaultcontrol>
    <controls>
        <control type="group">
            <animation effect="slide" start="-440,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="-440,0" time="160" tween="quadratic" easing="out">WindowClose</animation>
            <control type="button">
                <left>-20</left>
                <top>-16</top>
                <width>464</width>
                <height>1112</height>
                <texturefocus border="16">dialog_context.png</texturefocus>
                <texturenofocus border="16">dialog_context.png</texturenofocus>
                <colordiffuse>$VAR[ColorDialogVar]</colordiffuse>
            </control>
            <control type="panel" id="9090">
                <left>15</left>
                <top>100</top>
                <width>400</width>
                <height>708</height>
                <onleft>9090</onleft>
                <onright>Action(Close)</onright>
                <onright>ClearProperty(MediaMenu,Home)</onright>
                <onup condition="Integer.IsGreater(Container(9091).NumItems,0)">Control.SetFocus(9091,999)</onup>
                <ondown condition="Integer.IsGreater(Container(9091).NumItems,0)">Control.SetFocus(9091,0)</ondown>
                <onback>noop</onback>
                <onback>ClearProperty(MediaMenu,Home)</onback>
                <orientation>vertical</orientation>
                <scrolltime tween="quadratic" easing="out">200</scrolltime>
                <itemlayout height="100" width="100">
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>90</width>
                        <height>90</height>
                        <texture colordiffuse="33787878" border="5">listselect_fo.png</texture>
                    </control>
                    <control type="label">
                        <left>5</left>
                        <top>-10</top>
                        <width>90</width>
                        <height>90</height>
                        <align>center</align>
                        <font>font12</font>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>5</left>
                        <top>20</top>
                        <width>90</width>
                        <height>90</height>
                        <align>center</align>
                        <font>font10</font>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="100" width="100">
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>90</width>
                        <height>90</height>
                        <texture colordiffuse="$VAR[ColorHighlightVar]" border="5">listselect_fo.png</texture>
                    </control>
                    <control type="label">
                        <left>5</left>
                        <top>-10</top>
                        <width>90</width>
                        <height>90</height>
                        <align>center</align>
                        <font>font12</font>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>5</left>
                        <top>20</top>
                        <width>90</width>
                        <height>90</height>
                        <align>center</align>
                        <font>font10</font>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="list" id="9091">
                <left>15</left>
                <top>500</top>
                <width>400</width>
                <height>550</height>
                <onleft>9091</onleft>
                <onright>Action(Close)</onright>
                <onright>ClearProperty(MediaMenu,Home)</onright>
                <onup>9090</onup>
                <ondown>9090</ondown>
                <onback>noop</onback>
                <onback>ClearProperty(MediaMenu,Home)</onback>
                <orientation>vertical</orientation>
                <scrolltime tween="quadratic" easing="out">200</scrolltime>
                <itemlayout height="55" width="390">
                    <control type="label">
                        <width>390</width>
                        <height>55</height>
                        <align>center</align>
                        <font>font12</font>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="55" width="390">
                    <control type="label">
                        <width>390</width>
                        <height>55</height>
                        <align>center</align>
                        <font>font12</font>
                        <textcolor>$VAR[ColorHighlightVar]</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="label" id="600">
                <left>15</left>
                <top>440</top>
                <width>400</width>
                <height>50</height>
                <align>center</align>
                <textoffsetx>15</textoffsetx>
                <scroll>true</scroll>
                <scrollspeed>20</scrollspeed>
            </control>
        </control>
    </controls>
</window>
