<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>9000</defaultcontrol>
    <include>Animation.Dialog</include>
    <allowoverlay>no</allowoverlay>
    <coordinates>
        <left>60</left>
        <top>60</top>
    </coordinates>
    <controls>

        <include content="DialogBackgroundCommons">
            <param name="DialogBackgroundWidth" value="1800" />
            <param name="DialogBackgroundHeight" value="960" />
            <param name="DialogHeaderLabel" value="$LOCALIZE[15020]" />
            <param name="DialogHeaderId" value="" />
        </include>
        <control type="group">
            <animation effect="fade" start="100" end="0" time="400" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(FileBrowser)">Conditional</animation>
            <width>1800</width>
            <height>960</height>
        
            <control type="group">
                <control type="list" id="9000">
                    <description>processing mode selection list</description>
                    <left>30</left>
                    <top>100</top>
                    <width>1800</width>
                    <height>69</height>
                    <onup>9001</onup>
                    <ondown>200</ondown>
                    <onleft>9000</onleft>
                    <onright>9000</onright>
                    <orientation>horizontal</orientation>
                    <scrolltime tween="sine" easing="out">200</scrolltime>
                    <itemlayout width="352" height="69">
                        <control type="label">
                            <right>20</right>
                            <textoffsetx>25</textoffsetx>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout width="352" height="69">
                        <control type="image">
                            <animation effect="fade" time="0" tween="" easing="" start="100" end="60">Unfocus</animation>
                            <right>20</right>
                            <texture colordiffuse="$VAR[ColorHighlightVar]" border="5">listselect_fo.png</texture>
                        </control>
                        <control type="label">
                            <right>20</right>
                            <textoffsetx>25</textoffsetx>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </focusedlayout>
                </control>
            </control>
            <control type="label">
                <left>30</left>
                <top>250</top>
                <width>800</width>
                <height>40</height>
                <label>$LOCALIZE[15050] ($INFO[Container(20).NumItems])</label>
            </control>
            <control type="label">
                <left>910</left>
                <top>250</top>
                <width>800</width>
                <height>40</height>
                <label>$LOCALIZE[15051] ($INFO[Container(21).NumItems])</label>
            </control>
            <control type="group" id="200">
                <description>available- and active mode lists</description>
                <left>30</left>
                <top>296</top>
                <width>1880</width>
                <height>552</height>
                <ondown>9001</ondown>
                <onup>9000</onup>
                <control type="group">
                    <description>available modes group</description>
                    <width>860</width>
                    
                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture colordiffuse="33000000" border="5">listselect_fo.png</texture>
                    </control>
                    <control type="panel" id="20">
                        <description>available modes list</description>
                        <width>860</width>
                        <height>552</height>
                        <onup>9000</onup>
                        <ondown>9001</ondown>
                        <onright>21</onright>
                        <scrolltime>200</scrolltime>
                        <pagecontrol>60</pagecontrol>
                        <include>AudioDSPPanelContent</include>
                    </control>
                </control>
                <control type="group">
                    <left>880</left>
                    <width>860</width>
                    <height>552</height>
                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture colordiffuse="33000000" border="5">listselect_fo.png</texture>
                    </control>
                    
                    <control type="panel" id="21">
                        <description>active modes list</description>
                        <width>860</width>
                        <height>552</height>
                        <onup>9000</onup>
                        <ondown>9001</ondown>
                        <onleft>20</onleft>
                        <scrolltime>200</scrolltime>
                        <pagecontrol>61</pagecontrol>
                        <include>AudioDSPPanelContent</include>
                    </control>
                </control>
            </control>
            <control type="group" id="9001">
                <width>100%</width>
                <left>32</left>
                <top>868</top>
                <height>69</height>
                <control type="radiobutton" id="22">
                    <description>Default RadioButton</description>
                    <align>left</align>
                    <width>570</width>
                    <onup>200</onup>
                    <ondown>9000</ondown>
                    <onleft>24</onleft>
                    <onright>23</onright>
                    <label>15064</label>
                    <font>font15_title</font>
                    <radioposx>575</radioposx>
                    <texturenofocus colordiffuse="33787878" border="5">listselect_fo.png</texturenofocus>
                </control>
                <control type="button" id="23">
                    <description>Apply changes button</description>
                    <align>center</align>
                    <left>584</left>
                    <width>570</width>
                    <onup>200</onup>
                    <ondown>9000</ondown>
                    <onleft>22</onleft>
                    <onright>24</onright>
                    <label>14070</label>
                    <font>font15_title</font>
                    <texturenofocus colordiffuse="33787878" border="5">listselect_fo.png</texturenofocus>
                </control>
                <control type="button" id="24">
                    <description>Clear active modes button</description>
                    <align>center</align>
                    <left>1168</left>
                    <width>570</width>
                    <onup>200</onup>
                    <ondown>9000</ondown>
                    <onleft>23</onleft>
                    <onright>22</onright>
                    <label>15066</label>
                    <font>font15_title</font>
                    <texturenofocus colordiffuse="33787878" border="5">listselect_fo.png</texturenofocus>
                </control>
            </control>
        </control>

        <!-- Info Box -->
        <control type="group">
            <visible>!Window.IsVisible(DialogNotification.xml)</visible>
            <visible>!Window.IsVisible(DialogExtendedProgressBar.xml)</visible>
            <control type="label">
                <top>185</top>
                <left>30</left>
                <right>0</right>
                <height>32</height>
                <textcolor>$VAR[ColorDisabledVar]</textcolor>
                <label>$INFO[Container(9000).ListItem.Label2]</label>
                <scroll>true</scroll>
                <wrapmultiline>false</wrapmultiline>
            </control>
        </control>

        
        
    </controls>
</window>