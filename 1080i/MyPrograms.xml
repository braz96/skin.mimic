		</control>
		<control type="group">
			<visible>Control.IsVisible(500)</visible>
			<visible>!Window.IsActive(addoninformation)</visible>
			<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
			<include>Window_OpenClose_Animation</include>
			<top>-60</top>
			<control type="group">
				<visible>Control.IsVisible(500)</visible>
				<animation effect="slide" start="0" end="40" time="720" tween="cubic" easing="inout" condition="Control.IsVisible(57)">Conditional</animation>
				<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
				<control type="group">
					<left>90</left>
					<top>1010</top>
					<control type="label">
						<left>0</left>
						<top>0</top>
						<width>1150</width>
						<height>42</height>
						<aligny>top</aligny>
						<align>left</align>
						<font>font16_title</font>
						<textcolor>white</textcolor>
						<scroll>true</scroll>
						<label>[B]$INFO[ListItem.Label][/B]</label>
						<textoffsety>-2</textoffsety>
						<textoffsetx>30</textoffsetx>
					</control>
					<control type="label">
						<left>0</left>
						<top>45</top>
						<width>1500</width>
						<height>30</height>
						<align>left</align>
						<font>font13_title</font>
						<textcolor>white</textcolor>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Property(Addon.Summary)]</label>
						<textoffsetx>30</textoffsetx>
					</control>
				</control>
				<control type="label">
					<left>1500</left>
					<top>1005</top>
					<width>300</width>
					<height>90</height>
					<align>right</align>
					<label>$INFO[ListItem.Property(Addon.Version),[B],[/B]]</label>
					<font>font35_title</font>
					<textcolor>white</textcolor>
				</control>
			</control>
		</control>
		<include>ScrollOffsetLabel</include>
		<include>Topbar</include>
		<include>Bottombar</include>
		<control type="group">
			<left>-440</left>
			<include>SideBladeLeft</include>
			<control type="grouplist" id="9050">
				<include>MediaMenuTop</include>
				<control type="edit" id="19">
					<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
					<description>Filter</description>
					<textwidth>345</textwidth>
					<include>ButtonCommonValues</include>
					<label>587</label>
				</control>
				<control type="radiobutton" id="20">
					<visible>Container.CanFilterAdvanced</visible>
					<description>Filter</description>
					<include>ButtonCommonValues</include>
					<label>587</label>
					<onclick>right</onclick>
					<onclick>Filter</onclick>
				</control>
			</control>
		</control>
	</controls>
</window>