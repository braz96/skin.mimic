<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3013</defaultcontrol>
    <controls>
        <control type="label" id="3000"><visible>false</visible></control>
        <control type="textbox" id="3001"><visible>false</visible></control>
        <control type="label" id="3002"><visible>false</visible></control>
        <control type="label" id="3004"><visible>false</visible></control>

        <control type="group">
            <include>Animation.Common</include>
            <top>760</top>
            <left>1390</left>
            <width>480</width>
            <height>270</height>

            <control type="label" description="text">
                <top>-64</top>
                <right>20</right>
                <height>64</height>
                <font>font30</font>
                <label>$ADDON[service.nextup.notification 30008]...</label>
                <shadowcolor>ff000000</shadowcolor>
            </control>

            <control type="image" description="fanart">
                <width>100%</width>
                <height>100%</height>
                <fadetime>350</fadetime>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture diffuse="diffuse/nextup.png">$INFO[Player.Art(fanart)]</texture>
            </control>

            <control type="image" description="blackline">
                <top>206</top>
                <width>100%</width>
                <height>64</height>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture colordiffuse="BB000000" border="5">diffuse/actor-label.png</texture>
            </control>

            <control type="image">
                <top>85</top>
                <left>190</left>
                <height>100</height>
                <width>100</width>
                <aspectratio scalediffuse="false">keep</aspectratio>
                <texture colordiffuse="$VAR[ColorHighlightVar]">overlays/overlaybg.png</texture>
            </control>
            <control type="label">
                <description>Remaining</description>
                <top>103</top>
                <left>208</left>
                <height>64</height>
                <width>64</width>
                <font>font14</font>
                <align>center</align>
                <label>[B]$INFO[Player.TimeRemaining(ss)][/B]</label>
            </control>


            <control type="label" description="text">
                <left>20</left>
                <right>128</right>
                <height>64</height>
                <top>206</top>
                <label>$INFO[Control.GetLabel(3002)]$INFO[Control.GetLabel(3000)]</label>
            </control>

            <control type="button" id="3012">
                <description>Play</description>
                <left>352</left>
                <top>206</top>
                <width>64</width>
                <height>64</height>
                <label>I</label>
                <textoffsetx>0</textoffsetx>
                <align>center</align>
                <onleft>3013</onleft>
                <onright>3013</onright>
                <font>IconMedium</font>
            </control>
            <control type="button" id="3013">
                <description>Cancel</description>
                <left>416</left>
                <top>206</top>
                <width>64</width>
                <height>64</height>
                <label>J</label>
                <align>center</align>
                <aligny>top</aligny>
                <textoffsetx>0</textoffsetx>
                <textoffsety>11</textoffsety>
                <onleft>3012</onleft>
                <onright>3012</onright>
                <font>IconMedium</font>
            </control>
        </control>
