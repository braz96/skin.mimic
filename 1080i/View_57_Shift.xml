<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="ShiftPosterThumbs">
		<control type="image">
			<left>-12</left>
			<top>100</top>
			<width>340</width>
			<height>490</height>
			<aspectratio scalediffuse="false">scale</aspectratio>
			<texture background="true">$VAR[PosterThumbVar]</texture>
			<bordersize>20</bordersize>
		</control>
		<control type="image">
			<left>248</left>
			<top>120</top>
			<width>60</width>
			<height>60</height>
			<texture>$VAR[OverlayVar]</texture>
			<aspectratio align="right" aligny="top">keep</aspectratio>
		</control>
	</include>
	<include name="ShiftSquareThumbs">
		<control type="image">
			<left>-12</left>
			<top>265</top>
			<width>340</width>
			<height>340</height>
			<aspectratio scalediffuse="false">scale</aspectratio>
			<texture background="true">$INFO[ListItem.Icon]</texture>
			<bordersize>20</bordersize>
		</control>
		<control type="image">
			<left>248</left>
			<top>285</top>
			<width>60</width>
			<height>60</height>
			<texture>$VAR[OverlayVar]</texture>
			<aspectratio align="center" aligny="top">keep</aspectratio>
		</control>
	</include>
	<include name="PosterShift">
		<control type="group">
			<include>ViewAnimation</include>
			<visible>Control.IsVisible(57) + !Window.IsActive(addoninformation)</visible>
			<control type="fixedlist" id="57">
				<left>-120</left>
				<top>300</top>
				<width>2100</width>
				<height>750</height>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<onleft>57</onleft>
				<onright>57</onright>
				<ondown>60</ondown>
				<orientation>horizontal</orientation>
				<viewtype label="31079">BigWrap</viewtype>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic">400</scrolltime>
				<focusposition>1</focusposition>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(sets) | Container.Content(musicvideos)</visible>
				<itemlayout width="315" height="750" condition="!Container.Content(musicvideos)">
					<include>ShiftPosterThumbs</include>
				</itemlayout>
				<focusedlayout width="315" height="750" condition="!Container.Content(musicvideos)">
					<control type="group">
						<animation effect="zoom" center="auto" start="100" end="130" time="400" tween="quadratic" reversible="false">Focus</animation>
						<animation effect="zoom" center="auto" start="130" end="100" time="400" tween="quadratic" reversible="false">Unfocus</animation>
						<include>ShiftPosterThumbs</include>
					</control>
				</focusedlayout>
				<itemlayout width="315" height="750" condition="Container.Content(musicvideos)">
					<include>ShiftSquareThumbs</include>
				</itemlayout>
				<focusedlayout width="315" height="750" condition="Container.Content(musicvideos)">
					<control type="group">
						<animation effect="zoom" center="150,450" start="100" end="130" time="400" tween="quadratic" reversible="false">Focus</animation>
						<animation effect="zoom" center="150,450" start="130" end="100" time="400" tween="quadratic" reversible="false">Unfocus</animation>
						<include>ShiftSquareThumbs</include>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>0</left>
				<top>1051</top>
				<width>1920</width>
				<height>14</height>
				<onup>57</onup>
				<ondown>57</ondown>
				<orientation>horizontal</orientation>
			</control>
		</control>
	</include>
	<include name="AlbumShift">
		<control type="group">
			<include>ViewAnimation</include>
			<visible>Control.IsVisible(57) + !Window.IsActive(addoninformation)</visible>
			<control type="fixedlist" id="57">
				<left>-120</left>
				<top>300</top>
				<width>2100</width>
				<height>750</height>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<onleft>57</onleft>
				<onright>57</onright>
				<ondown>60</ondown>
				<orientation>horizontal</orientation>
				<viewtype label="31079">BigWrap</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="quadratic">400</scrolltime>
				<focusposition>1</focusposition>
				<visible>Container.Content(artists) | Container.Content(albums)</visible>
				<itemlayout width="315" height="750">
					<include>ShiftSquareThumbs</include>
				</itemlayout>
				<focusedlayout width="315" height="750">
					<control type="image">
						<left>-35</left>
						<top>340</top>
						<width>390</width>
						<height>400</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">$INFO[ListItem.Art(discart)]</texture>
						<animation effect="slide" delay="1600" end="0,-260" time="320" tween="quadratic">Focus</animation>
						<animation effect="slide" start="0,-260" end="0" time="400" tween="quadratic" easing="in">Unfocus</animation>
						<animation effect="zoom" start="100" end="70" center="auto" time="400" condition="!Control.HasFocus(57)">Conditional</animation>
						<visible>!IsEmpty(ListItem.Art(discart))</visible>
						<bordersize>7</bordersize>
					</control>
					<control type="group">
						<animation effect="zoom" center="150,450" start="100" end="130" time="400" tween="quadratic" reversible="false">Focus</animation>
						<animation effect="zoom" center="150,450" start="130" end="100" time="400" tween="quadratic" reversible="false">Unfocus</animation>
						<include>ShiftSquareThumbs</include>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>0</left>
				<top>1051</top>
				<width>1920</width>
				<height>14</height>
				<onup>57</onup>
				<ondown>noop</ondown>
				<orientation>horizontal</orientation>
			</control>
		</control>
	</include>
</includes>