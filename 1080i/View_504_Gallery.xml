<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!--STRIP LAYOUT-->
    <include name="View_504_Gallery">
		<top>15</top>
        <!--content detail-->
        <control type="group">
            <visible>Control.IsVisible(504)</visible>
            <include>Animation.Common</include>
            <!--flags-->
			<control type="label">
				<visible>![Window.IsActive(pictures) + Skin.HasSetting(PictureInfo.Disabled)]</visible>
				<left>383</left>
                <top>760</top>
				<label>$INFO[ListItem.Label]</label>
				<width>1225</width>
				<font>font28_title</font>
				<textcolor>$VAR[ColorTextVar]</textcolor>
			</control>
			<control type="label">
				<left>383</left>
				<top>940</top>
				<width>1225</width>
				<height>30</height>
				<align>left</align>
				<font>font13_title</font>
				<textcolor>$VAR[ColorHighlightVar]</textcolor>
				<label>$VAR[FloorSubLabelVar]</label>
				<visible>![Container.Content(artists) | Window.IsActive(pictures)]</visible>
			</control>
			<control type="label">
				<left>383</left>
				<top>940</top>
				<width>1225</width>
				<height>30</height>
				<align>left</align>
				<font>font13_title</font>
				<textcolor>$VAR[ColorHighlightVar]</textcolor>
				<label>$INFO[ListItem.Property(Artist_Genre)]</label>
				<visible>Container.Content(artists)</visible>
			</control>
            <!--strip top-->
            <control type="image">
            	<visible>Control.HasFocus(504)</visible>
                <include>FocusedBackgroundFade</include>
            	<top>203</top>
            	<left>370</left>
                <width>1179</width>
                <height>674</height>
                <texture>listselect_fo.png</texture>
                <colordiffuse>$VAR[ColorHighlightVar]</colordiffuse>
            </control>
            <!--container-->
            <control type="wraplist" id="504">
                <viewtype label="31054">info</viewtype>
                <left>-791</left>
                <top>209</top>
				<width>3464</width>
                <height>1200</height>
                <onleft>504</onleft>
                <onright>504</onright>
                <scrolltime tween="sine" easing="inout">400</scrolltime>
                <onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<pagecontrol>60</pagecontrol>
                <focusposition>1</focusposition>
                <orientation>horizontal</orientation>
                <itemlayout width="1167" height="650">
                    <control type="group">
                    	<top>6</top>
                    	<left>6</left>
                        <control type="image">
							<visible>!Window.IsActive(pictures)</visible>
                            <width>1155</width>
                            <height>650</height>
                            <texture fallback="special://skin/backgrounds/default_bg.jpg" background="true">$INFO[ListItem.Art(fanart)]</texture>
                            <aspectratio align="center" aligny="center">scale</aspectratio>
                        </control>
						<control type="image">
							<visible>Window.IsActive(pictures)</visible>
                            <width>1155</width>
                            <height>650</height>
                            <texture background="true">$INFO[ListItem.PicturePath]</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
                        </control>
                        <control type="image">
							<visible>ListItem.IsFolder + Window.IsActive(pictures)</visible>
                            <width>1155</width>
                            <height>650</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
                        </control>
                        <control type="image">
                            <visible>![Window.IsActive(pictures) | Container.Content(artists)]</visible>
                            <left>6</left>
                            <top>420</top>
                            <width>1155</width>
                            <height>168</height>
                            <aspectratio align="center">keep</aspectratio>
                            <texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
                            <animation effect="zoom" start="100" end="173" time="200" center="528,308" tween="Cubic" condition="Control.HasFocus(8000) + !IsEmpty(ListItem.Title)">Conditional</animation>
                        </control>
                        <control type="image">
                            <width>1155</width>
                            <height>650</height>
                            <texture>thumbs/diffuse.png</texture>
                        </control>
                        <include name="OverlayIcons" condition="![Window.IsActive(pictures) | Container.Content(artists)]">
                            <param name="OverlayLeft" value="1095" />
                            <param name="OverlayTop" value="0" />
                        </include>
                    </control>
                </itemlayout>
                <focusedlayout width="1167" height="650">
                    <control type="group">
                        <include>PanelFocusedItemZoom</include>
                        <top>6</top>
                    	<left>6</left>
						<control type="image">
							<visible>ListItem.IsFolder + !Container.Content(artists)</visible>
                            <width>1155</width>
                            <height>650</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
                        </control>
                        <control type="image">
							<visible>!Window.IsActive(pictures)</visible>
                            <width>1155</width>
                            <height>650</height>
                            <texture fallback="special://skin/backgrounds/default_bg.jpg" background="true">$INFO[ListItem.Art(fanart)]</texture>
                            <aspectratio align="center" aligny="center">scale</aspectratio>
                        </control>
                        <control type="image">
							<visible>![Window.IsActive(pictures) | Container.Content(artists)]</visible>
                            <left>6</left>
                            <top>420</top>
                            <width>1155</width>
                            <height>168</height>
							<aspectratio align="center">keep</aspectratio>
                            <texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
                            <animation effect="zoom" start="100" end="173" time="200" center="528,308" tween="Cubic" condition="Control.HasFocus(8000) + !IsEmpty(ListItem.Title)">Conditional</animation>
                        </control>
						<control type="image">
							<visible>Window.IsActive(pictures)</visible>
                            <width>1155</width>
                            <height>650</height>
                            <texture background="true">$INFO[ListItem.PicturePath]</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
                        </control>
                        <control type="image">
                            <animation center="auto" condition="Control.HasFocus(504)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
                            <animation center="auto" condition="Control.HasFocus(504)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
                            <width>1155</width>
                            <height>650</height>
                            <texture>thumbs/diffuse.png</texture>
                        </control>
                        <include name="OverlayIcons" condition="![Window.IsActive(pictures) | Container.Content(artists)]">
                            <param name="OverlayLeft" value="1095" />
                            <param name="OverlayTop" value="0" />
                        </include>
                    </control>
                </focusedlayout>
            </control>
			<control type="image">
				<left>388</left>
				<top>640</top>
				<width>1155</width>
				<height>168</height>
				<aspectratio>keep</aspectratio>
				<texture background="true">$INFO[Skin.String(MusicLibraryPath)]$INFO[Container(504).ListItem.Artist,,/logo.png]</texture>
				<visible>Container.Content(artists)</visible>
			</control>
        </control>
        <control type="group">
            <visible>Control.IsVisible(504)</visible>
            <top>-15</top>
            <include>Scrollbar_Horizontal</include>
        </control>
    </include>
</includes>