<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>-</defaultcontrol>
	<allowoverlay>false</allowoverlay>
	<onload condition="System.HasAddon(script.artistslideshow)">RunScript(script.artistslideshow, daemon=True)</onload>
	<controls>
		<control type="visualisation" id="2">
			<!-- FIX ME Music Visualization needs to have an id of 2 in this window to be able to lock or change preset -->
			<description>visualisation</description>
			<include>FullscreenDimensions</include>
			<visible>Player.HasAudio + ![StringCompare(Visualisation.Name,waveform) | StringCompare(Visualisation.Name,opengl spectrum) | StringCompare(Visualisation.Name,directx spectrum)]</visible>
		</control>
		<control type="image">
            <aspectratio>scale</aspectratio>
            <include>FullscreenDimensions</include>
            <texture background="true">$INFO[Player.Art(fanart)]</texture>
            <visible>StringCompare(Skin.String(musicvis.background),fanart) + !Skin.HasSetting(HideVisualizationFanart)</visible>
            <animation effect="fade" start="100" end="40" time="0" condition="!Skin.HasSetting(HideVisualizationFanart) + Visualisation.Enabled">Conditional</animation>
            <animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
            <animation effect="slide" start="-30,-30" end="30,30" time="6000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
        </control>
        <control type="image">
            <aspectratio>scale</aspectratio>
            <include>FullscreenDimensions</include>
            <texture background="true">$INFO[Window(home).Property(ImageFilter1)]</texture>
            <visible>StringCompare(Skin.String(musicvis.background),bluralbum) + !Skin.HasSetting(HideVisualizationFanart)</visible>
            <animation effect="fade" start="100" end="40" time="0" condition="!Skin.HasSetting(HideVisualizationFanart) + Visualisation.Enabled">Conditional</animation>
            <animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
            <animation effect="slide" start="-30,-30" end="30,30" time="6000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
        </control>
        <control type="image">
            <aspectratio>scale</aspectratio>
            <include>FullscreenDimensions</include>
            <texture background="true">$INFO[Window(home).Property(ImageFilterfa2)]</texture>
            <visible>StringCompare(Skin.String(musicvis.background),pixelfanart) + !Skin.HasSetting(HideVisualizationFanart)</visible>
            <animation effect="fade" start="100" end="40" time="0" condition="!Skin.HasSetting(HideVisualizationFanart) + Visualisation.Enabled">Conditional</animation>
            <animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
            <animation effect="slide" start="-30,-30" end="30,30" time="6000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
        </control>
        <control type="image">
            <aspectratio>scale</aspectratio>
            <include>FullscreenDimensions</include>
            <texture background="true">$INFO[Window(home).Property(ImageFilterfa3)]</texture>
            <visible>StringCompare(Skin.String(musicvis.background),posterizefanart) + !Skin.HasSetting(HideVisualizationFanart)</visible>
            <animation effect="fade" start="100" end="40" time="0" condition="!Skin.HasSetting(HideVisualizationFanart) + Visualisation.Enabled">Conditional</animation>
            <animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
            <animation effect="slide" start="-30,-30" end="30,30" time="6000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
        </control>
        <control type="multiimage">
            <aspectratio>scale</aspectratio>
            <include>FullscreenDimensions</include>
            <timeperimage>10000</timeperimage>
            <randomize>true</randomize>
            <fadetime>600</fadetime>
            <loop>yes</loop>
            <imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
            <visible>System.HasAddon(script.artistslideshow) + StringCompare(Skin.String(musicvis.background),artistslideshow) + !Skin.HasSetting(HideVisualizationFanart)</visible>
            <animation effect="fade" start="100" end="40" time="0" condition="!Skin.HasSetting(HideVisualizationFanart) + Visualisation.Enabled">Conditional</animation>
            <animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
            <animation effect="slide" start="-30,-30" end="30,30" time="6000" tween="sine" easing="inout" pulse="true" condition="!Skin.HasSetting(Disable.AnimateFanart)">Conditional</animation>
        </control>
        <control type="group">
            <visible>StringCompare(Skin.String(musicvis.background),albumwall) + !Skin.HasSetting(HideVisualizationFanart)</visible>
            <control type="panel" id="9032">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <viewtype label="Wall">icons</viewtype>
                <onleft>9032</onleft>
                <onright>9032</onright>
                <onup>9032</onup>
                <ondown>9032</ondown>
                <movement>6</movement>
                <pagecontrol>60</pagecontrol>
                <scrolltime tween="cubic" easing="inout">600</scrolltime>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
                <itemlayout height="192" width="192">
                    <control type="image">
                        <animation effect="fade" start="100" end="40" time="0" condition="!Skin.HasSetting(HideVisualizationFanart) + Visualisation.Enabled">Conditional</animation>
                        <left>0</left>
                        <top>0</top>
                        <width>192</width>
                        <height>192</height>
                        <aspectratio>scale</aspectratio>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <fadetime>400</fadetime>
                    </control>
                </itemlayout>
                <focusedlayout height="192" width="192">
                    <control type="image">
                        <animation effect="fade" start="100" end="40" time="0" condition="!Skin.HasSetting(HideVisualizationFanart) + Visualisation.Enabled">Conditional</animation>
                        <left>0</left>
                        <top>0</top>
                        <width>192</width>
                        <height>192</height>
                        <aspectratio>scale</aspectratio>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <fadetime>400</fadetime>
                    </control>
                </focusedlayout>
                <content>special://skin/extras/playlists/albumwall.xsp</content>
            </control>
        </control>
		<!-- media infos -->
		<control type="fadelabel">
			<left>0</left>
			<top>0</top>
			<heigth>1080</heigth>
			<width>FullScreenWidth</width>
			<scroll>true</scroll>
			<scrollout>true</scrollout>
			<font>BigAssFont</font>
			<pauseatend>200</pauseatend>
			<aligny>center</aligny>
			<label>                      $INFO[Player.Title]</label>
			<label>                      $INFO[MusicPlayer.Artist]</label>
			<label>                      $INFO[MusicPlayer.Album]</label>
			<textcolor>1FFFFFFF</textcolor>
			<textoffsetx>20</textoffsetx>
			<resetonlabelchange>true</resetonlabelchange>
			<visible>Skin.HasSetting(BigAssLabel)</visible>
		</control>
		<control type="fadelabel">
			<left>0</left>
			<top>0</top>
			<heigth>1920</heigth>
			<width>1080</width>
			<scroll>true</scroll>
			<scrollout>true</scrollout>
			<font>BigAssFont</font>
			<pauseatend>200</pauseatend>
			<aligny>center</aligny>
			<label>               $INFO[MusicPlayer.Artist]</label>
			<label>               $INFO[MusicPlayer.Album]</label>
			<label>               $INFO[Player.Title]</label>
			<textcolor>1FFFFFFF</textcolor>
			<textoffsetx>20</textoffsetx>
			<resetonlabelchange>true</resetonlabelchange>
			<visible>Skin.HasSetting(BigAssLabel)</visible>
			<animation effect="rotate" tween="cubic" time="720" center="auto" end="90" condition="true">Conditonal</animation>
		</control>
		<control type="group">
			<left>0</left>
			<top>740</top>
			<visible>[Player.ShowInfo | Window.IsActive(MusicOSD)] + ![Window.IsVisible(1120) | Window.IsVisible(okdialog) | Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList)]</visible>
			<include>Window_OpenClose_Animation</include>
			<control type="image">
				<left>0</left>
				<top>-1</top>
				<width>FullScreenWidth</width>
				<height>361</height>
				<texture>background.png</texture>
				<colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
			</control>
			<control type="image">
				<left>1590</left>
				<top>25</top>
				<width>400</width>
				<height>45</height>
				<aspectratio>keep</aspectratio>
				<texture colordiffuse="$VAR[ColorHighlightVar]" fallback="rating0.png">$INFO[Player.StarRating]</texture>
			</control>
			<control type="image">
				<left>1730</left>
				<top>175</top>
				<width>198</width>
				<include>MediaFlagVars</include>
				<texture colordiffuse="$VAR[ColorTextVar]">$INFO[MusicPlayer.Codec,flags/audio/,.png]</texture>
			</control>
			<control type="progress">
				<left>345</left>
				<top>275</top>
				<width>1543</width>
				<height>35</height>
				<info>Player.Progress</info>
			</control>
			<control type="label">
				<top>273</top>
				<left>355</left>
				<width>900</width>
				<height>35</height>
				<font>font14_title</font>
				<textcolor>$VAR[ColorTextVar]</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>$INFO[Player.Time]</label>
			</control>
			<control type="label">
				<top>273</top>
				<left>978</left>
				<width>900</width>
				<height>35</height>
				<font>font14_title</font>
				<textcolor>$VAR[ColorTextVar]</textcolor>
				<align>right</align>
				<aligny>center</aligny>
				<label>$INFO[Player.Duration]</label>
			</control>
			<control type="label">
				<top>273</top>
				<left>345</left>
				<width>1543</width>
				<height>35</height>
				<font>font14_title</font>
				<textcolor>$VAR[ColorTextVar]</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$VAR[MusicSeekLabelVar]</label>
			</control>
			<control type="grouplist">
				<left>345</left>
				<top>15</top>
				<width>1300</width>
				<height>460</height>
				<itemgap>10</itemgap>
				<control type="label">
					<width>1300</width>
					<height>60</height>
					<font>font35_title</font>
					<textcolor>$VAR[ColorTextVar]</textcolor>
					<label>$INFO[MusicPlayer.TrackNumber,,. ]$INFO[Player.Title]</label>
					<scroll>true</scroll>
				</control>
				<control type="label">
					<width>1300</width>
					<height>50</height>
					<font>font28_title</font>
					<textcolor>$VAR[ColorHighlightVar]</textcolor>
					<label>$INFO[MusicPlayer.Artist]</label>
				</control>
				<control type="label">
					<width>1300</width>
					<height>50</height>
					<font>font14_textbox</font>
					<textcolor>$VAR[ColorTextVar]</textcolor>
					<label>$INFO[MusicPlayer.Album]$INFO[MusicPlayer.Year, • ,]</label>
				</control>
				<control type="label">
					<width>1300</width>
					<height>48</height>
					<font>font14_textbox</font>
					<textcolor>$VAR[ColorTextVar]</textcolor>
					<scroll>true</scroll>
					<label>[COLOR $VAR[ColorHighlightVar]]$LOCALIZE[19031]:[/COLOR] $INFO[MusicPlayer.offset(1).Artist,, • ]$INFO[MusicPlayer.offset(1).TrackNumber,,. ]$INFO[MusicPlayer.offset(1).Title]</label>
				</control>
			</control>
			<control type="group">
				<left>31</left>
				<top>30</top>
				<control type="image">
					<description>Cover image</description>
					<width>280</width>
					<height>280</height>
					<aspectratio align="center" aligny="center">scale</aspectratio>
					<texture fallback="DefaultAlbumCover.png">$INFO[Player.Art(thumb)]</texture>
				</control>
			</control>
			<control type="grouplist">
				<left>1050</left>
				<top>267</top>
				<width>748</width>
				<height>150</height>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<include>VisibleFadeEffect</include>
				<visible>Player.Forwarding | Player.Rewinding</visible>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="image">
					<top>4</top>
					<width>45</width>
					<height>43</height>
					<aspectratio>keep</aspectratio>
					<texture flipx="true">osd/ff.png</texture>
					<colordiffuse>FFe5e5e5</colordiffuse>
					<animation effect="fade" start="100" end="60" time="800" pulse="true" condition="true">Conditional</animation>
					<visible>Player.Rewinding</visible>
				</control>
				<control type="label">
					<top>6</top>
					<label>$VAR[VideoPlayerForwardRewindVar]</label>
					<width min="10" max="300">auto</width>
					<height>35</height>
					<aligny>center</aligny>
					<font>font14_title</font>
					<textcolor>$VAR[ColorTextVar]</textcolor>
				</control>
				<control type="image">
					<top>4</top>
					<width>45</width>
					<height>43</height>
					<aspectratio>keep</aspectratio>
					<texture>osd/ff.png</texture>
					<colordiffuse>FFe5e5e5</colordiffuse>
					<animation effect="fade" start="100" end="60" time="800" pulse="true" condition="true">Conditional</animation>
					<visible>Player.Forwarding</visible>
				</control>
			</control>
		</control>
		<!-- Artist bio -->
		<control type="group">
			<animation effect="slide" end="0,-188" time="240" condition="Window.Next(home)">WindowClose</animation>
			<animation effect="slide" start="0,-188" end="0,0" time="240">VisibleChange</animation>
			<animation effect="slide" start="0,-188" end="0,0" time="400" condition="Window.Previous(home)">WindowOpen</animation>
			<visible>!Window.IsActive(MusicOSD) + !Window.IsActive(1120) + !Player.ShowCodec + !Window.IsActive(script-cu-lrclyrics-main.xml)</visible>
			<visible>System.HasAddon(script.artistslideshow) + !IsEmpty(Window(Visualisation).Property(ArtistSlideshow.ArtistBiography))</visible>
			<visible>[Player.ShowInfo + Skin.HasSetting(Enable.VizInfo)] | Skin.HasSetting(Enable.VizPersistent)</visible>
			<top>0</top>
			<control type="group">
				<control type="image">
					<width>FullScreenWidth</width>
					<height>188</height>
					<texture>background.png</texture>
					<colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
				</control>
				<control type="textbox">
					<description>Artist bio</description>
					<left>25</left>
					<top>12</top>
					<height>160</height>
					<width>1870</width>
					<font>font14_textbox3</font>
					<textcolor>$VAR[ColorTextVar]</textcolor>
					<label>[COLOR $VAR[ColorHighlightVar]]$LOCALIZE[21887]:[/COLOR] $INFO[Window(Visualisation).Property(ArtistSlideshow.ArtistBiography)]</label>
					<autoscroll time="3000" delay="10000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
				</control>
			</control>
		</control>
		<!-- codec & viz infos -->
		<control type="group" id="0">
			<animation effect="slide" start="0,-320" end="0,0" time="200">VisibleChange</animation>
			<animation effect="fade" time="200">VisibleChange</animation>
			<visible>Player.ShowCodec + ![Window.IsVisible(script-cu-lrclyrics-main.xml) | Window.IsVisible(VisualisationSettings) | Window.IsVisible(VisualisationPresetList)]</visible>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>FullScreenWidth</width>
				<height>310</height>
				<texture>background.png</texture>
				<colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
			</control>
			<control type="grouplist">
				<left>30</left>
				<top>0</top>
				<width>FullScreenWidth</width>
				<height>300</height>
				<align>center</align>
				<aligny>center</aligny>
				<itemgap>10</itemgap>
				<control type="label">
					<description>row 1 label</description>
					<width>1770</width>
					<height>90</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>font14</font>
					<textcolor>$VAR[ColorTextVar]</textcolor>
					<label>$INFO[musicplayer.Codec,$LOCALIZE[21446]: ,]$INFO[musicplayer.Bitrate,  •  $LOCALIZE[623]: ,kbps]$INFO[musicplayer.bitspersample,  •  $LOCALIZE[612]: ,]$INFO[musicplayer.Samplerate,  •  $LOCALIZE[613]: ,kHz]$INFO[musicplayer.Channels,  •  $LOCALIZE[21444]: ]</label>
				</control>
				<control type="label">
					<description>row 2 label</description>
					<width>1770</width>
					<height>90</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>font14</font>
					<label>$INFO[Visualisation.Name,, [I][COLOR=orange]($LOCALIZE[20166])[/COLOR][/I]  •  ]fps: $INFO[System.FPS]</label>
					<textcolor>$VAR[ColorTextVar]</textcolor>
					<visible>Visualisation.Locked</visible>
				</control>
				<control type="label">
					<description>row 3 label</description>
					<width>1770</width>
					<height>90</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>font14</font>
					<label>$INFO[Visualisation.Name,,  •  ]fps: $INFO[System.FPS]</label>
					<textcolor>$VAR[ColorTextVar]</textcolor>
					<visible>!Visualisation.Locked</visible>
				</control>
				<control type="label">
					<description>row 3 label</description>
					<width>1770</width>
					<height>90</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>font14</font>
					<label>$INFO[Visualisation.Preset,$LOCALIZE[13388]: ]</label>
					<textcolor>$VAR[ColorTextVar]</textcolor>
				</control>
			</control>
		</control>
	</controls>
</window>