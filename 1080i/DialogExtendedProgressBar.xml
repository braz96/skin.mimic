<?xml version="1.0" encoding="UTF-8"?>
<window>
	<coordinates>
		<left>1090</left>
		<top>32</top>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="group">
			<visible>!Window.IsActive(fullscreenvideo) + !Window.IsActive(visualisation)</visible>
			<animation effect="slide" time="0" tween="cubic" easing="out" start="0,0" end="0,120" condition="StringCompare(Skin.String(HomeLayout),2) + Window.IsActive(Home)">Conditional</animation>
			<control type="image">
				<description>background image</description>
				<left>0</left>
				<top>0</top>
				<width>800</width>
				<height>140</height>
				<texture border="12">dialog_context.png</texture>
				<colordiffuse>$VAR[ColorDialogVar]</colordiffuse>
			</control>
			<control type="progress" id="32">
				<description>progress control</description>
				<left>30</left>
				<top>30</top>
				<width>740</width>
				<height>80</height>
			</control>
			<control type="label" id="31">
				<description>Header Label</description>
				<left>40</left>
				<top>27</top>
				<width>720</width>
				<height>45</height>
				<font>font13_title</font>
				<textcolor>$VAR[ColorTextVar]</textcolor>
				<align>left</align>
				<aligny>center</aligny>
			</control>
			<control type="label">
				<description>Title Label</description>
				<left>40</left>
				<top>64</top>
				<width>720</width>
				<height>45</height>
				<font>font12</font>
				<textcolor>$VAR[ColorTextVar]</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>$INFO[Control.GetLabel(30)]$INFO[Control.GetLabel(32),: ,%]</label>
			</control>
			<control type="label" id="30">
				<description>Header Label</description>
				<include>HiddenObject</include>
			</control>
		</control>
	</controls>
</window>